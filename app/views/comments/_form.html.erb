
<% if @comment.errors.any? %>
  <%= error_helper(@comment) %>
  <%= error_list(@comment) %>
<% end %>

<%= form_tag show_comments_path(@show) do |f| %>
<%= label_tag 'title' %>
<%= text_field_tag :title, @comment.title %><br><br>
<%= text_area_tag :body, @comment.body, size: '50x5' %>
<%= submit_tag %>
<% end %>
