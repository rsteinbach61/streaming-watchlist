
<% if @comment.errors.any? %>
  <%= error_helper(@comment) %>
  <%= error_list(@comment) %>
<% end %>

<%= form_for [@show, @comment] do |f| %>
  <%= f.label 'Comment Title' %>
  <%= f.text_field :title %><br><br>
  <%= f.label 'Comment' %>
  <%= f.text_area :body %><br><br>
  <%= f.submit %>
<% end%>
